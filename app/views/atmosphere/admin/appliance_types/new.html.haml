.appliance_types
  .row
    = render 'atmosphere/admin/appliance_types/appliance_types_menu'

    .col-md-9
      #appliance_type

        .edit
          %h4
            = t('create')
            = t('appliance_types.long_title_single')
            .pull-right
              %button.btn.btn-success.btn-xs{title: 'Create', id: 'save-appliance-type'}
                =icon 'save'
                = t('save')
              :javascript
                $(function() {
                  $('#save-appliance-type').on('click', function() {
                    $('#new_appliance_type').submit();
                  });
                });

              = link_to admin_appliance_types_path, class: 'btn btn-default btn-xs', title: 'Cancel' do
                = t('cancel')
          %hr
          = render 'atmosphere/admin/appliance_types/edit'

