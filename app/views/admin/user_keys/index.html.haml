%h1 Listing user_keys

%table
  %tr
    %th Name
    %th Fingerprint
    %th Owner
    %th
    %th

  - @user_keys.each do |user_key|
    %tr
      %td= user_key.name
      %td= user_key.fingerprint
      %td= user_key.user.login
      %td= link_to 'Show', admin_user_key_path(user_key)
      %td= link_to 'Destroy', admin_user_key_path(user_key), :method => :delete, :data => { :confirm => 'Are you sure?' }

