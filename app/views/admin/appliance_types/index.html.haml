.appliance_types
  .row
    .col-md-3
      %legend
        Appliance Types
        .pull-right
          = link_to new_admin_appliance_type_path, class: "btn btn-success btn-xs", title: "Add new Appliance Type", remote: true, data: { target: '#appliance_type' }  do
            %i.icon-plus
            Add new
      %ul#appliance-types-menu.nav.nav-pills.nav-stacked
        = render 'admin/appliance_types/appliance_types_menu'

    .col-md-9
      #appliance_type
      -#= hb 'outlet'

:javascript
  $('body').on('ajax:success', '[data-target]', function(xhr, data, status) {
    $($(this).attr('data-target')).html(data);
  });
