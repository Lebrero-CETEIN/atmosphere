%p#notice= notice

%h1
  = t('show')
  = t('compute_sites.long_title_single')

%p
  %table.table.table-hover.table-condensed
    %tr
      %td
        %b
          = t('compute_sites.site')
      %td{ :style => "font-family: monospace;" }
        = @compute_site.site_id
    %tr
      %td
        %b
          = t('compute_sites.name')
      %td
        = @compute_site.name
    %tr
      %td
        %b
          = t('compute_sites.location')
      %td
        = @compute_site.location
    %tr
      %td
        %b
          = t('compute_sites.site_type')
      %td
        = @compute_site.site_type
    %tr
      %td
        %b
          = t('compute_sites.technology')
      %td
        = @compute_site.technology
    %tr
      %td
        %b
          = t('compute_sites.http_proxy_url')
      %td{ :style => "font-family: monospace;" }
        = @compute_site.http_proxy_url
    %tr
      %td
        %b
          = t('compute_sites.https_proxy_url')
      %td{ :style => "font-family: monospace;" }
        = @compute_site.https_proxy_url
    %tr
      %td
        %b
          = t('compute_sites.configuration')
      %td{ :style => "font-family: monospace;" }
        = @compute_site.config
    %tr
      %td
        %b{ :style => "font-family: monospace;" }
          = t('compute_sites.template_filters')
      %td
        = @compute_site.template_filters

%p
  .btn-group
    = link_to edit_admin_compute_site_path(@compute_site),
      class: 'btn btn-warning', title: t('edit') do
      =fa_icon 'bars'
      = t('edit')
    = link_to admin_compute_sites_path,
      class: 'btn btn-default', title: t('back') do
      =fa_icon 'reply'
      = t('back')
