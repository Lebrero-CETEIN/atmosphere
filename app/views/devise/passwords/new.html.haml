= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-signin" }) do |f|
  %h3.form-signin-heading Forgot your password?
  = devise_error_messages!

  = f.email_field :email, :autofocus => true, :placeholder => t("email"), :class => "form-control"

  %div.login-buttons
    = f.submit "Send reset instructions", class: "btn btn-success"
    .pull-right= link_to t('devise.login'), new_session_path(resource), :class => "btn btn-default"

