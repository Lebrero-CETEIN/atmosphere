.login-box
  = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
    %h3.form-signin-heading Forgot your password?
    = devise_error_messages!

    = f.email_field :email, :autofocus => true, :placeholder => t("devise.email"), :class => "form-control"

    %div.login-buttons
      = f.submit t('devise.reset'), class: "btn btn-success"
      .pull-right= link_to t('devise.login'), new_session_path(resource), :class => "btn btn-default"

