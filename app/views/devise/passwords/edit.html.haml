= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "form-signin" }) do |f|
  %h3.form-signin-heading Change your password
  = devise_error_messages!
  = f.hidden_field :reset_password_token

  = f.password_field :password, placeholder: "Password", autofocus: true, class: "form-control"
  = f.password_field :password_confirmation, placeholder: "Password confirmation", class: "form-control"

  %div.login-buttons
    = f.submit "Change my password", class: "btn btn-success"
    .pull-right= link_to t('devise.login'), new_session_path(resource), :class => "btn btn-default"
