.login-box
  = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
    %h3.form-signin-heading
      = t('devise.change_your_password')
    = devise_error_messages!
    = f.hidden_field :reset_password_token

    = f.password_field :password, placeholder: t('devise.password'), autofocus: true, class: "form-control"
    = f.password_field :password_confirmation, placeholder: t('devise.password_confirmation'), class: "form-control"

    %div.login-buttons
      = f.submit t('devise.change_password'), class: "btn btn-success"
      .pull-right= link_to t('devise.login'), new_session_path(resource), class: "btn btn-default"
