= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-signin" }) do |f|
  %h2.form-signin-heading= t('code_name')
  =f.email_field :email, autofocus: true, placeholder: t("email"), class: "form-control"
  =f.password_field :password, placeholder: t("password"), class: "form-control"
  - if devise_mapping.rememberable?
    .clearfix.remember
      %label.checkbox.remember_me
        =f.check_box :remember_me
        %span= t('devise.remember_me')

  =f.submit t('devise.login'), class: "btn btn-success"
  .pull-right= link_to t('devise.forgot_your_password'), new_password_path(resource_name), :class => "btn btn-default"